<h1>OMDB</h1>
<h2>Here is your list</h2>
<h3> Click on a movie title to see more information.  Click edit to edit.</h3>
<ul>
	<% @movies.each do |movie| %>
		<a href="/movies/<%= movie.id %>">
			<%= movie.title %>
		</a> 
		<button><a href="/movies/<%= movie.id %>/edit">
			edit
		</a></button>
		<%= form_for(movie, { :method => :delete }) do |f| %>
  		<%= f.submit "Delete" %>
		<% end %>
		<br>

	<% end %>
</ul>

<h3><%= link_to("Add", new_movie_path) %> a movie</h3>


